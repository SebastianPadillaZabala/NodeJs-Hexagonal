datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id        String   @id @default(uuid())
  name      String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaci√≥n con Log
  logs      Log[]
}

model Log {
  id                String   @id @default(uuid())
  cellphone_number  String
  status            String
  log_message       String
  template_id       String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  template          Template @relation(fields: [template_id], references: [id])
}
